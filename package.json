{
  "name": "ng-login",
  "version": "0.0.1",
  "description": "Auth and User services for Angular v2 and up. Requires backend REST service.",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabric8io/ng-login"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run clean-dist && npm run transpile && npm run copy-files npm run bundle && npm run minify",
    "copy-files": "cp LICENSE README.md package.json dist",
    "bundle": "rollup -c",
    "minify": "uglifyjs dist/bundles/login.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/login.umd.min.js",
    "transpile": "./node_modules/.bin/ngc",


    "check-coverage": "istanbul check-coverage --statements 23 --branches 5 --functions 9 --lines 24",
    "ci": "npm run e2e && npm run test",
    "clean":          "rimraf node_modules doc dist && npm cache clean",
    "clean-and-copy": "npm run clean-dist && npm run copy-files",
    "clean-dist":     "rimraf dist",
    "clean-install":  "npm run clean && npm install",
    "clean-start":    "npm run clean-install && npm start",
    "docker:run": "webpack-dev-server --inline --progress --port 8080",
    "docs": "typedoc --options typedoc.json src/app/app.component.ts",
    "e2e": "protractor",
    "e2e-live": "protractor --elementExplorer",
    "functests": "npm-run-all -p webdriver-start testserver-start protractor",
    "lint": "find src -name '*.ts' | xargs tslint -c tslint.json --force",
    "lint-x": "tslint --force \"src/**/*.ts\"",
    "xprestart": "npm run clean-and-copy",
    "xprebuild": "npm run clean-and-copy",
    "xprebuild:prod": "npm run clean-and-copy",
    "pretest": "npm run lint",
    "protractor": "sleep 15 && ./node_modules/protractor/bin/protractor protractor.config.js",
    "postinstall": "npm run webdriver-update",
    "posttest": "remap-istanbul -i coverage/json/coverage-final.json -o coverage/html -t html",
    "reinstall": "rm -rf node_modules && npm cache clean && npm install",
    "server": "webpack-dashboard -- webpack-dev-server --inline --port 8080",
    "setup": "npm install && npm run validate",
    "start": "webpack-dev-server --inline --progress --host 0.0.0.0 --port 8088",
    "start-x": "npm run server",
    "start-dev": "webpack-dashboard -t almighty -- webpack-dev-server --inline --progress --host 0.0.0.0 --port 8088",
    "start:hmr": "npm run server -- --hot",
    "stats": "webpack --profile --json > stats.json",
    "test": "npm-run-all --serial validate test:func",
    "test-x": "karma start",
    "test:func": "./run_functional_tests.sh",
    "test:unit": "karma start",
    "testserver-start": "webpack-dev-server --inline --progress --host 0.0.0.0 --port 8088",
    "test-watch": "karma start --no-single-run --auto-watch",
    "validate": "npm-run-all --parallel validate-webpack:* test:unit --serial check-coverage",
    "validate-webpack:dev": "webpack-validator webpack.config.js --env.dev",
    "validate-webpack:prod": "webpack-validator webpack.config.js --env.prod",
    "webdriver-start-x": "./node_modules/protractor/bin/webdriver-manager update && ./node_modules/protractor/bin/webdriver-manager start",
    "webdriver-start": "webdriver-manager start",
    "webdriver-update": "webdriver-manager update",
    "watch": "webpack --watch --progress --profile",
    "watch:test": "npm run test:unit -- --auto-watch --no-single-run"

  },
  "peerDependencies": {
    "@angular/core": "^2.0.0",
    "@angular/http": "^2.0.0"
  },
  "devDependencies": {
    "@angular/common": "2.2.3",
    "@angular/compiler": "2.2.3",
    "@angular/compiler-cli": "2.2.3",
    "@angular/core": "2.2.3",
    "@angular/http": "2.2.3",
    "core-js": "^2.4.1",
    "reflect-metadata": "0.1.8",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "^0.6.26",
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.5.35",
    "@types/node": "^6.0.45",
    "@types/selenium-webdriver": "^2.53.32",
    "angular2-template-loader": "^0.4.0",
    "autoprefixer": "^6.3.7",
    "awesome-typescript-loader": "^2.2.4",
    "codelyzer": "1.0.0-beta.3",
    "copy-webpack-plugin": "^4.0.0",
    "cpy-cli": "1.0.1",
    "css-loader": "0.23.1",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "2.0.0-beta.1",
    "file-loader": "^0.9.0",
    "ghooks": "1.2.4",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "istanbul-instrumenter-loader": "0.2.0",
    "jasmine-core": "2.4.1",
    "karma": "1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-cli": "1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-htmlfile-reporter": "0.3.4",
    "karma-jasmine": "1.0.2",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-mocha-reporter": "2.2.0",
    "karma-phantomjs-launcher": "1.0.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "mocha": "3.0.2",
    "node-sass": "^3.8.0",
    "npm-run-all": "2.2.0",
    "null-loader": "^0.1.1",
    "opt-cli": "1.4.2",
    "phantomjs-prebuilt": "^2.1.7",
    "postcss-loader": "^0.9.1",
    "precss": "^1.4.0",
    "protractor": "4.0.8",
    "raw-loader": "^0.5.1",
    "resolve-url-loader": "^1.6.0",
    "rimraf": "2.5.4",
    "sass-loader": "^3.2.2",
    "style-loader": "0.13.1",
    "ts-helpers": "1.1.1",
    "ts-loader": "0.8.1",
    "tslint": "^3.15.1",
    "tslint-loader": "2.1.5",
    "typescript": "^2.0.3",
    "webpack": "2.1.0-beta.22",
    "webpack-dashboard": "^0.2.0",
    "webpack-dev-middleware": "1.7.0",
    "webpack-dev-server": "2.1.0-beta.0",
    "webpack-md5-hash": "^0.0.5",
    "webpack-merge": "^0.14.0",
    "webpack-validator": "2.1.3",

    "jasmine-spec-reporter": "^2.4.0",
    "json-loader": "^0.5.3",
    "karma-remap-istanbul": "0.2.1",
    "remap-istanbul": "^0.6.4",
    "shelljs": "^0.7.0",
    "typedoc": "^0.5.1",
    "url-loader": "^0.5.6"

  }
}
