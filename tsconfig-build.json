{
  "compilerOptions": {
    "target": "ES5",
    "module": "es2015",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "stripInternal": true,
    "moduleResolution": "node",

    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": ".",
    "inlineSources": true,
    "skipLibCheck": true,
    "lib": [ "es2015", "dom" ]

  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
